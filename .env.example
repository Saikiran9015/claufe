# Copy this to .env and fill values for your environment
# MongoDB connection URI (include credentials and host)
MONGODB_URI=mongodb://localhost:27017/
# MongoDB database name to use
MONGO_DB_NAME=dreamx

# Flask secret key
SECRET_KEY=replace_with_a_strong_secret_key

# Session cookie config (use None + True for production when cross-site cookies needed)
SESSION_COOKIE_SAMESITE=None
SESSION_COOKIE_SECURE=True

# Razorpay (if used)
RAZORPAY_KEY=
RAZORPAY_SECRET=

# Shiprocket
SHIPROCKET_EMAIL=
SHIPROCKET_PASSWORD=

# Optional URLs
SUCCESS_URL=/order-success
FAILED_URL=/checkout
